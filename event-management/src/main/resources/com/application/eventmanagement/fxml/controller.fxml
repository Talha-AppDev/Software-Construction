<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.application.eventmanagement.Controller"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <!-- Welcome Label -->
    <Label fx:id="welcomeLabel" text="Welcome to the Dashboard"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Dashboard Buttons -->
    <Button fx:id="eventButton" text="Manage Events" onAction="#handleEventButton"
            style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <Button fx:id="registrationButton" text="Register for Event" onAction="#handleRegistrationButton"
            style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
    <Button fx:id="uploadMaterialButton" text="Upload Material" onAction="#handleUploadMaterialButton"
            style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-background-color: #FFC107; -fx-text-fill: white;"/>
    <Button fx:id="concludeEventButton" text="Conclude Event" onAction="#handleConcludeEventButton"
            style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-background-color: #F44336; -fx-text-fill: white;"/>

    <!-- Logout Button -->
    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 30 0 0;">
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogoutButton"
                style="-fx-font-size: 14px; -fx-min-width: 100px; -fx-background-color: #607D8B; -fx-text-fill: white;"/>
    </HBox>
</VBox>