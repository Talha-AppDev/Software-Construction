<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.application.eventmanagement.SignupController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">
    <Label text="Sign Up"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 0 0 20 0;"/>

    <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">
        <Label text="Username:"
               style="-fx-font-size: 14px; -fx-text-fill: #333333;"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField"
                   style="-fx-font-size: 14px; -fx-min-width: 250px; -fx-padding: 8px;"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:"
               style="-fx-font-size: 14px; -fx-text-fill: #333333;"
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField"
                   style="-fx-font-size: 14px; -fx-min-width: 250px; -fx-padding: 8px;"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Password:"
               style="-fx-font-size: 14px; -fx-text-fill: #333333;"
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField"
                       style="-fx-font-size: 14px; -fx-min-width: 250px; -fx-padding: 8px;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Program:"
               style="-fx-font-size: 14px; -fx-text-fill: #333333;"
               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ChoiceBox fx:id="programChoice"
                   style="-fx-font-size: 14px; -fx-min-width: 250px;"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Semester:"
               style="-fx-font-size: 14px; -fx-text-fill: #333333;"
               GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ChoiceBox fx:id="semesterChoice"
                   style="-fx-font-size: 14px; -fx-min-width: 250px;"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="signupButton"
                text="Sign Up"
                onAction="#handleSignup"
                style="-fx-font-size: 14px; -fx-min-width: 100px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 4px;"/>
        <Button fx:id="backButton"
                text="Back"
                onAction="#handleBack"
                style="-fx-font-size: 14px; -fx-min-width: 100px; -fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 4px;"/>
    </HBox>
</VBox>