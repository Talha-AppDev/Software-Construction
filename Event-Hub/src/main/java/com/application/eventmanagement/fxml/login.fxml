<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="15" styleClass="gradient-bg" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanagement.LoginController">
    <Label text="Login" styleClass="title-text" />
    <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="primary-button" />
</VBox>