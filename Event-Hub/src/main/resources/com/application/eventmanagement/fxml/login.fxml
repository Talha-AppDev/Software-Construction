<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.application.eventmanagement.LoginController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">
    <Label text="Login"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 0 0 10 0;"/>

    <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
        <Label text="Email:"
               style="-fx-font-size: 14px; -fx-text-fill: #333333;"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField"
                   style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-padding: 5px;"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password:"
               style="-fx-font-size: 14px; -fx-text-fill: #333333;"
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField"
                       style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-padding: 5px;"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="loginButton"
            text="Login"
            onAction="#handleLogin"
            style="-fx-font-size: 14px; -fx-min-width: 100px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 4px;"/>
</VBox>